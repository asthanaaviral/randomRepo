generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Sender {
  id          String   @id @default(uuid())
  name        String
  email       String   @unique
  hourlyQuota Int      @default(100)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  emails      ScheduledEmail[]

  @@map("senders")
}

enum EmailStatus {
  PENDING
  SENT
  FAILED
  THROTTLED
}

model ScheduledEmail {
  id        String      @id @default(uuid())
  recipient String
  subject   String
  body      String
  sendAt    DateTime
  status    EmailStatus @default(PENDING)
  jobId     String?     // BullMQ Job ID reference
  
  senderId  String
  sender    Sender      @relation(fields: [senderId], references: [id])

  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  @@index([status, sendAt])
  @@map("scheduled_emails")
}
